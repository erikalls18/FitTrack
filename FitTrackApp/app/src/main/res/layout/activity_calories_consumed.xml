<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaloriesConsumed">
    <include
        layout = "@layout/toolbar_layout"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="411dp"
        android:layout_height="322dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nutrition" />

    <TextView
        android:id="@+id/breakfast"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/shape_rectangle"
        android:drawableStart="@drawable/baseline_food_beverage_24"
        android:drawableEnd="@drawable/baseline_add_circle_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="BreakFast"
        android:textColor="#FF5722"
        android:textSize="24sp"
        android:onClick="selectItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/lunch"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_rectangle"
        android:drawableStart="@drawable/baseline_food_bank"
        android:padding="5dp"
        android:text=" Lunch"
        android:textColor="#FF5722"
        android:textSize="24sp"
        android:onClick="selectItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakfast"
        android:drawableEnd="@drawable/baseline_add_circle_24"/>

    <TextView
        android:id="@+id/dinner"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_rectangle"
        android:onClick="selectItem"
        android:drawableStart="@drawable/baseline_food_beverage_24"
        android:drawableEnd="@drawable/baseline_add_circle_24"
        android:padding="5dp"
        android:text=" Dinner"
        android:textColor="#FF5722"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lunch" />

    <TextView
        android:id="@+id/snacks"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_rectangle"
        android:drawableStart="@drawable/baseline_food_bank"
        android:drawableEnd="@drawable/baseline_add_circle_24"
        android:padding="5dp"
        android:text=" Snacks"
        android:textColor="#FF5722"
        android:textSize="24sp"
        android:onClick="selectItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinner" />

</androidx.constraintlayout.widget.ConstraintLayout>